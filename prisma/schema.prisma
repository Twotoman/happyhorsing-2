generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider  = "postgresql"
}



// =====================
// User
// =====================
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  roles Role[]   @default([OWNER])

  accounts      Account[]
  sessions      Session[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  passwordHash  String?  // bei Credentials-Login n√∂tig

  clubId        String?
  club          Club?     @relation(fields: [clubId], references: [id])

  ownedHorses   Horse[]   @relation("OwnerRelation")
  trainedHorses Horse[]   @relation("TrainerRelation")

}

// =====================
// Account (OAuth, Credentials, etc.)
// =====================
model Account {
  id                 String    @id @default(cuid())
  userId             String
  //providerType       String
  //providerId         String
  type               String
  provider           String
  providerAccountId  String
  
  refresh_token       String?
  access_token        String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  //accessTokenExpires DateTime?

  //createdAt          DateTime  @default(now())
  //updatedAt          DateTime  @updatedAt

  user               User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  //@@unique([providerId, providerAccountId])
}

// =====================
// Session
// =====================
model Session {
  id           String   @id @default(cuid())
  userId       String
  expires      DateTime
  sessionToken String   @unique
  //accessToken  String   @unique
  //createdAt    DateTime @default(now())
  //updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId])
}


enum Role {
  OWNER
  TRAINER
  RIDER
  CLUB_ADMIN
}

// =====================
// Horses
// =====================
model Horse {
  id           String        @id @default(uuid())
  name         String
  ownerId      String
  owner        User          @relation("OwnerRelation", fields: [ownerId], references: [id])
  trainerId    String?
  trainer      User?         @relation("TrainerRelation", fields: [trainerId], references: [id])
  clubId       String?
  club         Club?         @relation(fields: [clubId], references: [id])

  imageUrl  String?  // Hier wird die URL vom Supabase Storage gespeichert
  breed     String?
}


// =====================
// Club
// =====================
model Club {
  id      String   @id @default(uuid())
  name    String
  users   User[]
  horses  Horse[]
}

// =====================
// Verification Token
// (Magic Links / Email Login)
// =====================
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}